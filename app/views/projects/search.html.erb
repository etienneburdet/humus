<div class="container">
  <div class="row">
    <div class="col-4">
      <ul>
        <% @projects.each do |project| %>
          <li><%= link_to project.name, project_path(project) %> </li>
        <% end %>
      </ul>
    </div>
    <div class="col-8">
      <div
        id="searchProjectMap"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>
  </div>
</div>
