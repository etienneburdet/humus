
<div class="container-fluid">
  <h2><%= @project.name %></h2>
    <div class="row">
      <div class="col-6 d-flex flex-column">
        <div class="variable-impact d-flex flex-column">
          <div class="impact-top d-flex justify-content-between">
            <p class="impact-calculation" data-value="<%= @project.uhi %>"><%= @project.uhi %></p>
            <p class="impact-calculation" data-value="<%= @project.water_infiltration %>"><%= @project.water_infiltration %></p>
          </div>
          <div class="impact-bottom d-flex justify-content-between">
            <p class="impact-calculation" data-value="<%= @project.biodiversity %>"><%= @project.biodiversity %></p>
            <p class="impact-calculation" data-value="<%= @project.local_food %>"><%= @project.local_food %></p>
          </div>
      </div>
        <div class="inv-input">
          <%= simple_form_for [@project, @contract] do |f| %>
            <%= f.input :investment %>
            <input  type="range"
                    id="investRange"
                    class="custom-range"
                    name="investRange"
                    min="0"
                    max="100"
                    value="90"
                    step="1"
                    data-cap="<%= @project.investment_cap %>">
            <%= f.button :submit, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
      <div
        class="col-6"
        id="investProjectMap"
        style="width: 100%; height: 100vh;"
        data-marker="<%= @marker.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>
  </div>
</div>


