<div class="card-trip">
  <%= cl_image_tag project.photo.key, title: "Humus eco-projet", height: 300, width: 800, crop: :fill %>
  <span id="like-project-<%= project.id %>" class="change-icon">
    <%= render 'shared/like_unlike', project: project, user: current_user %>
  </span>

  <div class="card-trip-infos">
    <div>
      <h2>LE PROJET</h2>
      <p><%= project.description.html_safe %>
      </p>
      <div class="bottom-box d-flex justify-content-center mt-2">
        <button type="button" class="btn btn-primary">Je partage</button>
      </div>
    </div>
  </div>
</div>
